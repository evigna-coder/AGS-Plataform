{
  "name": "ags-platform",
  "version": "1.0.0",
  "private": true,
  "description": "Plataforma AGS - Monorepo con mÃ³dulos de reportes OT y sistema modular",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:reportes": "pnpm --filter @ags/reportes-ot dev",
    "dev:modular": "pnpm --filter @ags/sistema-modular dev",
    "dev:modular:electron": "pnpm --filter @ags/sistema-modular dev:electron",
    "dev:all": "pnpm --parallel --filter \"./apps/*\" dev",
    "build:reportes": "pnpm --filter @ags/reportes-ot build",
    "build:modular": "pnpm --filter @ags/sistema-modular build",
    "build:all": "pnpm --filter \"./apps/*\" build",
    "type-check": "pnpm --filter \"./packages/*\" type-check"
  },
  "devDependencies": {
    "typescript": "~5.8.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
